<%-include('header')%>
       <!-- Form Start -->
       <div class="container-fluid pt-4 px-4">
        <div class="row g-4">
            <div class="col-7">
                <div class="bg-secondary rounded h-100 p-4">
                    <h6 class="mb-4">Change Password</h6>
                    <form method="post" action="/admin/editPassword">
                        <div class="row mb-3">
                            <label for="inputEmail3" class="col-sm-3 col-form-label">Current Password</label>
                            <div class="col-sm-8">
                                <input type="text" name="Cupass" class="form-control" id="inputEmail3" placeholder="Enter Current Password">
                            </div>
                        </div>  
                        <div class="row mb-3">
                            <label for="inputEmail3" class="col-sm-3 col-form-label">New Password</label>
                            <div class="col-sm-8">
                                <input type="text" name="Nepass" class="form-control" id="inputEmail3" placeholder="Enter New Password">
                            </div>
                        </div>  
                        <div class="row mb-3">
                            <label for="inputEmail3" class="col-sm-3 col-form-label">Confirm Password</label>
                            <div class="col-sm-8">
                                <input type="text" name="Copass" class="form-control" id="inputEmail3" placeholder="Enter Confirm Password">
                            </div>
                        </div>  
                        <button type="submit" class="btn btn-primary">Edit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- Form End -->
<%-include('footer')%>