                                            <div style="width: 100%;" class="d-flex align-items-center justify-content-center">
                                                <img src="<%=v.single_image%>" class="product-img">
                                            </div>
                                            <div class="product-content mt-3" style="width: 85%;">
                                                <div class="d-flex align-items-center justify-content-center">
                                                    <div class="col-4">
                                                        <div class="d-flex justify-content-center">
                                                            <h6 class="d-flex align-items-center justify-content-center" style="margin: 0;">Product Name : </h6>
                                                        </div>
                                                    </div>
                                                    <div class="col-8">
                                                        <div class="d-flex justify-content-start">
                                                            <span class="d-flex align-items-center justify-content-center ms-2"><%=v.product%></span>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="d-flex align-items-center justify-content-center">
                                                    <div class="col-4">
                                                        <div class="d-flex justify-content-center">
                                                            <h6 class="d-flex align-items-center justify-content-center" style="margin: 0;">Product Price : </h6>
                                                        </div>
                                                    </div>
                                                    <div class="col-8">
                                                        <div class="d-flex justify-content-start">
                                                            <span class="d-flex align-items-center justify-content-center ms-2" style="color: #EB1616;">â‚¹<%=v.price%></span>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="d-flex align-items-center justify-content-center">
                                                    <div class="col-4">
                                                        <div class="d-flex justify-content-center">
                                                            <h6 class="d-flex align-items-center justify-content-center" style="margin: 0;">Available Color : </h6>
                                                        </div>
                                                    </div>
                                                    <div class="col-8">
                                                        <div class="d-flex justify-content-start">
                                                            <span class="d-flex align-items-center justify-content-center ms-2"><%=v.color%></span>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-12 d-flex align-items-center justify-content-center mt-2 more-details">
                                                    <a href="/admin/product/view_more/<%=v.id%>" class="btn btn-primary">
                                                        <span>More Details</span>
                                                    </a>
                                                </div>
                                                <div class="product-btn d-flex align-items-center justify-content-center mt-2 me-1">
                                                    <%if(v.isActive){%>
                                                        <a href="/admin/product/isactive/<%=v.id%>" title="Active" class="me-1 productbutton btn">
                                                            <i class="ri-eye-line"></i>
                                                        </a>
                                                    <%}else{%>
                                                        <a href="/admin/product/deactive/<%=v.id%>" title="Deactive" class="me-1 productbutton btn">
                                                            <i class="ri-eye-off-line"></i>
                                                        </a>
                                                    <%}%>
                                                    <a href="/admin/product/update/<%=v.id%>" title="Update" class="me-1 productbutton btn">
                                                        <i class="ri-pencil-fill"></i>
                                                    </a>
                                                    <a href="/admin/product/delete/<%=v.id%>" title="Delete" class="me-1 productbutton btn">
                                                        <i class="ri-close-fill"></i>
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            <%}}else{%>
                                <table class="table">
                                    <tr>
                                        <td colspan="20" align="center">No Record Found</td>
                                    </tr>
                                </table>
                            <%}%>
                            <table style="width: 100%;">
                                <tr align="center">
                                    <td>
                                        <%for(var i=0; i<totalDocument; i=i+1){%>
                                            <a href="?page=<%=i%>&searchInput=<%=searchInput%>" class="dubtn btn"><%=i+1%></a>
                                        <%}%>
                                    </td>
                                </tr>
                                <tr align="center" >
                                    <td>
                                        <%var pre = parseInt(curentPage)-1%>
                                        <%if(pre>=0){%>
                                            <a href="?page=<%=pre%>" class="btn btn-primary">Pre</a>
                                        <%}%>
                                        <a href="?page=<%=page%>&searchInput=<%=searchInput%>" class="dubtn btn"><%=parseInt(page)+1%></a>
                                        <%var nextpage = parseInt(curentPage)+1%>
                                        <% if(totalDocument>nextpage){%>
                                            <a href="?page=<%=nextpage%>" class="btn btn-primary">Next</a>
                                        <%}%>
                                    </td>
                                </tr>
                            </table>
                        </div>
